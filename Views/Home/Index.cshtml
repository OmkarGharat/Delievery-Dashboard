@using Delievery_Dashboard.ViewModel;
@{
    ViewData["Title"] = "Home Page";
}

@model CombinedViewModel;

<style>
    .grey-placeholder {
        color: grey;
        opacity: 1;
    }

    .h2-7 {
        height: 2.7rem !important;
    }

    .top-7 {
        top: -7px !important;
    }

    #AcualEfforts {
        width: 30rem !important;
    }
</style>

@using (Html.BeginForm("Submit", "Home", FormMethod.Post, new { id = "myForm", @class = "form-horizontal" }))
{
    <div class="row mb-3 p-4 shadow" style="box-shadow: 2px 2px 7px 0 rgb(0,0,0,0.2);">
        <div class="col-4 themed-grid-col">
            <div class="form-group d-flex flex-column">
                @await Html.PartialAsync("_TextBoxPartial", Model.TextBox)
            </div>
        </div>

        <div class="col-4 themed-grid-col">
            <div class="form-group d-flex flex-column">
                <label for="TaskDescription" class="form-label col-sm-2 top-7 w-100">Task Description</label>
                @Html.TextAreaFor(m => m.DelieveryDashboard.TaskDescription, new { @class = "form-control mt-2 mb-2 p-2", id = "TaskDescription" })
                @Html.ValidationMessageFor(m => m.DelieveryDashboard.TaskDescription, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row mb-3 p-4 shadow" style="box-shadow: 2px 2px 7px 0 rgb(0,0,0,0.2);">
        @foreach (var field in Model.DelieveryDashboard.Fields)
        {
            <div class="col-4 themed-grid-col">
                @await Html.PartialAsync("_DropDownPartial", field)
            </div>
        }
    </div>
}